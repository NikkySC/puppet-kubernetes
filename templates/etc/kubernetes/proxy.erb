<% if @kube_proxy_kubeconfig %> --kubeconfig=<%= scope['kubernetes::node::kube_proxy_kubeconfig'] %><% end -%>
<% if @kube_proxy_master %> --master=<%= scope['kubernetes::node::api_server'] %><% end -%>
<% if @kube_proxy_oom_score_adj %> --oom-score-adj=<%= scope['kubernetes::node::kube_proxy_oom_score_adj'] %><% end -%>
<% if @kube_proxy_proxy_port_range %> --proxy-port-range=<%= scope['kubernetes::node::kube_proxy_proxy_port_range'] %><% end -%>
<% if @kube_proxy_resource_container %> --resource-container=<%= scope['kubernetes::node::kube_proxy_resource_container'] %><% end -%>
<%= scope['kubernetes::node::kube_proxy_args'] %>"
